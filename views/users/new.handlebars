
<h1 class="title is-4" id="register">Register New Users</h1>

<div class="title is-5" id="flash">
  {{ flash }}
</div>
<form id="newUserForm" class="field" action="/users" method="post">
  <label class="label">
    <input class="input column is-4" type="text" name="user[name]" placeholder="Name">
  </label>

  <label class="label">
    <input class="input column is-4" type="text" name="user[email]" placeholder="Email">
  </label>

  <label class="label">
    <input class="input column is-4" type="password" name="user[password]" placeholder="Password">
  </label>

  {{#each places as |place|}}
  <label class="label checkbox">
    <input type="checkbox" name="places" value="{{place.id}}">
      {{place.name}}
      <br>
    </input>
  </label>
  {{/each}}

  <button class="button is-primary">Submit</button>
</form>
